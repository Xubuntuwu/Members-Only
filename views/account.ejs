<div class="account-container sub_container d-flex flex-column">
    <h1 class="text-center mt-5"><%-title%> </h1>
    <div class="container-xl d-flex flex-column gap-3 middle_container mt-auto mb-auto align-items-center">
        <div class="text-center">
            <h3>Username</h3>
            <h4 class="text-secondary fs-1"><%- user.username %></h4>
        </div>
        <div class="text-center">
            <h3>Membership?</h3>
            <h4 class="text-secondary fs-1"><%- user.member %></h4>
        </div>
        <% if ( user.member== 'false') { %>
        <div>
            <% if(typeof(message)!= 'undefined'){ %>
                <div class="card border-danger mb-3" style="max-width: 20rem;">
                    <div class="card-body">
                        <p class="card-text"><%-message%></p>
                    </div>
                </div>
            <%}%>
            <form method="post" action="/request-membership">
                <label class="form-label" for="request_membership"><h3>Membership Password</h3></label>
                <input type="text" id="request_membership" name="request_membership" class="form-control"/>
                <button type="submit" class="btn btn-secondary mt-3">Submit</button>
            </form>
        </div>
        <% } else { %>
            <img src="/assets/images/Awards.svg" alt="you're cool illustration" class="mainimg"/>
        <% } %>
    </div>
</div>